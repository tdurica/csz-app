{
    "compilerOptions": {
      "module": "esnext",
      "target": "es5",
      "moduleResolution": "node",
      "jsx": "react",
      "outDir": "lib",
      "rootDir": "./src",
      "baseUrl": "./",
      "allowJs": true,
      "removeComments": true,
      "declaration": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "downlevelIteration": true,
      "paths": {
        "types": ["types/*", "node", "react"],
        "*": ["src/*"]
      },
      "lib": [
        "es2020",
        "dom",
        "dom.iterable"
      ],
      "typeRoots": [
        "./node_modules/@types",
        "./types"
      ],
      "sourceMap": true,
    },
    "compileOnSave": true,
    "exclude": [
      "src/test",
      "node_modules",
      "lib"
    ],
    "include": [
      "src",
    ],
  }